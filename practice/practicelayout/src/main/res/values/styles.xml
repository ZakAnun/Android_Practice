<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="playoutAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/playoutColorPrimary</item>
        <item name="colorPrimaryDark">@color/playoutColorPrimaryDark</item>
        <item name="colorAccent">@color/playoutColorAccent</item>
    </style>

    <style name="playoutCommonTvStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/playoutColorAccent</item>
        <item name="android:background">@color/playoutColorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>
</resources>
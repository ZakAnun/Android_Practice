<resources>
    <!-- Base application theme. -->
    <style name="pviewAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/pviewColorPrimary</item>
        <item name="colorPrimaryDark">@color/pviewColorPrimaryDark</item>
        <item name="colorAccent">@color/pviewColorAccent</item>
    </style>

    <style name="pviewCommonTvStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/pviewColorAccent</item>
        <item name="android:background">@color/pviewColorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

</resources>
<resources>
    <!-- Base application theme. -->
    <style name="pthreadAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/pthreadColorPrimary</item>
        <item name="colorPrimaryDark">@color/pthreadColorPrimaryDark</item>
        <item name="colorAccent">@color/pthreadColorAccent</item>
    </style>

    <style name="pthreadCommonTvStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/pthreadColorAccent</item>
        <item name="android:background">@color/pthreadColorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>
</resources>